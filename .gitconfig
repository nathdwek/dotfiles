[color]
   ui = auto
[merge]
   tool = meld
[diff]
   tool = meld
[alias]
   tree = log --graph --all --decorate --oneline
   rmc = rm --cached
   c = commit -m
   cs = commit -S -m
   ca = commit -am
   csa = commit -S -am
   s = status
   a = add
   ap = add -p
   d = diff --color-words
   dc = diff --cached
   ls = ls-files
[core]
   editor = vim
   autocrlf = input
[format]
   pretty ="%C(yellow)%ar%Creset %C(white bold)%h%Creset %C(bold)%s%Creset %C(yellow bold)%an%Creset"
[push]
   default = upstream
[log]
   date = relative
[color "diff"]
   new = white green bold
   old = white red bold
[tar]
   txz = "xz -c"
